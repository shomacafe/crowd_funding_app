<header class="header">
  <div class="header-left-nav">
    <%= link_to (image_tag "/assets/logo.png", width:"200px", class: "logo-image"), root_path, data: {"turbolinks" => false}, class: "headerLogo" %>
    <div class="search_form">
      <%= search_form_for @q, url: projects_path do |f| %>
        <%= f.search_field :title_cont, class: "searchBox", :placeholder => "キーワード" %>
        <%= f.submit "検索", class: "searchButton" %>
      <% end %>
    </div>
    <%= link_to "プロジェクトをはじめる", projects_new_path, class: "project-start" %>
    <%= link_to "プロジェクトをさがす", projects_path, class: "project-search" %>
  </div>
  <div class="header-right-nav">
    <div onclick="obj=document.getElementById('open').style; obj.display=(obj.display=='none')?'block':'none';">
      <% if user_signed_in? %>
        <div class="userArea">
          <span class="user_name"><%= current_user.name %></span>
          <% if current_user.image? %>
            <%= image_tag current_user.image.url, class: "user-icon" %>
          <% else %>
            <%= image_tag "/assets/default.jpg", :size => '60x60', class: "user-icon" %>
          <% end %>
        </div>
    </div>
        <div id="open" style="display:none;clear:both;">
          <ul class="dropdown-menu">
            <li><%= link_to "プロジェクトをはじめる", projects_new_path %></li>
            <li><%= link_to "作成したプロジェクト", posts_projects_path %></li>
            <li><%= link_to "応援したプロジェクト", purchases_path %></li>
            <li><%= link_to "プロフィール編集", profile_users_path %></li>
            <li><%= link_to "メールアドレス・パスワード編集", edit_user_registration_path %></li>
            <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
          </ul>
        </div>
      <% else %>
        <div class="nav-item">
          <%= link_to 'ゲストログイン', users_guest_sign_in_path, class: "log-in", method: :post %>
          <%= link_to 'ログイン', new_user_session_path, class: "log-in" %>
          <%= link_to '登録する', new_user_registration_path, class: "registration" %>
        </div>
      <% end %>  
  </div>
</header>
